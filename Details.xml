<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vibhor.daid.Details">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Details"
        android:id="@+id/tv_details"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_d1"
        android:hint="Name"
        android:layout_below="@+id/tv_details"
        android:layout_alignParentStart="true"
        android:layout_marginTop="56dp"
        android:layout_alignEnd="@+id/tv_details" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_d2"
        android:hint="Disability"
        android:layout_below="@+id/et_d1"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/et_d1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="READ TEXT"
        android:id="@+id/b_read"
        android:onClick="OpenDetails"
        android:layout_below="@+id/et_d2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="99dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LISTEN"
        android:id="@+id/b_listen"
        android:onClick="OpenDetails"
        android:layout_alignTop="@+id/b_read"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/et_d2" />
</RelativeLayout>
