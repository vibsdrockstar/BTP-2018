<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vibhor.handicapped.Details">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Details"
        android:id="@+id/tv_details"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_d1"
        android:hint="Name"
        android:layout_below="@+id/tv_details"
        android:layout_alignParentStart="true"
        android:layout_marginTop="56dp"
        android:layout_alignEnd="@+id/tv_details" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GOVERNMENT EMPLOYEES AND PERSONS"
        android:id="@+id/b_goep"
        android:onClick="OpenDetails"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tv_details" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JOBS AND EDUCATION"
        android:id="@+id/b_jobedu"
        android:onClick="OpenDetails"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/et_d1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_age"
        android:hint="Age"
        android:inputType="number"
        android:ems="2"
        android:layout_below="@+id/et_d1"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/b_jobedu" />
</RelativeLayout>


